<div class="row mt-5" style="margin-left: 0px; margin-right: 0px; padding-left: 50px; padding-right: 0px;">
    <% if (error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <%= error %>.
          </div>
    <% } %>
    <div class="col-5">
        <h1>Register</h1>
        <form method="POST" action="/register">
            <div class="mb-3">
                <label for="name" class="form-label">Nama</label>
                <div class="row">
                    <input type="text" class="form-control" placeholder="Nama" name="name" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="gender" class="form-label">Gender</label><br>
                <input type="radio" name="gender" value="Laki-laki" checked>
                <label for="laki-laki">Laki-laki</label><br>
                <input type="radio" name="gender" value="Perempuan">
                <label for="perempuan">Perempuan</label><br>
              </div>
            <div class="mb-3">
                <label for="birth" class="form-label">Tanggal Lahir</label>
                <div class="row">
                    <input type="date" class="form-control" name="birth" required/>
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <div class="row">
                    <input type="text" class="form-control" placeholder="E-mail" name="email" aria-describedby="emailHelp" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="row">
                    <input type="password" class="form-control" placeholder="Min 8 characters" name="password" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Confirm Password</label>
                <div class="row">
                    <input type="password" class="form-control" placeholder="Same with above" name="confirmPassword" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mb-3">Register</button>
            <p class="mb-5">Already have an account? <a href="/login">Login!</a>. Or you are an admin? <a href="/petugas/login">Click here!</a></p>
            </form>
    </div>
    <div class="col-7 text-center">
        <img class="mt-5" src="./illust-5.png" alt="" style="width: 550px; height: 500px;">
      </div>
</div>